{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div id="connexion-container">
    <h1>Connexion</h1> 
    <div id="connexion-box">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous etes connecetez {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">deconnecter</a>
                </div>
            {% endif %}

            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="exemple@gmail.com" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword">MDP</label>
                <input type="password" value="Test12345678@" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-group checkbox">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>

            <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
            <a href="{{ path('app_forgot_password_request')}}">Mot de passe oubli√©</a>
        </form>
    </div>
</div>

<div class="inscription-container">
    <h3>Pas de compte enocre? Inscrivez-vous!</h3>
    <a href="{{ path('app_register') }}" class="btn">S'inscrire</a>
</div>
{% endblock %}
